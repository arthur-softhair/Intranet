    <script>
        $(document).ready(function () {
            // Função para atualizar o link ativo com base no scroll
            function updateActiveLink() {
                var scrollPosition = $(window).scrollTop();

                $(".nav-link").each(function () {
                    var href = $(this).attr("href");

                    // Pula se não for âncora interna
                    if (!href || !href.startsWith("#")) return;

                    var section = $(href);
                    if (section.length) {
                        var sectionTop = section.offset().top - 80;

                        if (scrollPosition >= sectionTop) {
                            $(".nav-link").removeClass("active");
                            $(this).addClass("active");
                        }
                    }
                });
            }

            // Mudança de cor ao clicar
            $(".nav-link").on("click", function (e) {
                var href = $(this).attr("href");

                // Só trata âncoras internas
                if (href && href.startsWith("#")) {
                    e.preventDefault();

                    $(".nav-link").removeClass("active");
                    $(this).addClass("active");

                    var target = $(href);
                    if (target.length) {
                        $("html, body").animate({ scrollTop: target.offset().top - 70 }, 500);
                    }
                }
                // Se não for âncora, deixa o comportamento normal acontecer
            });

            // Mudança de cor ao rolar
            $(window).on("scroll", function () {
                updateActiveLink();
            });
        });
    </script>


